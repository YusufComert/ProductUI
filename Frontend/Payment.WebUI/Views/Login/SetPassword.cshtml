@model SetPasswordDto

@{
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<!DOCTYPE html>
<html class="h-100" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="width=device-width,initial-scale=1">
    <title>Şifre Belirleme</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/adminweb/assets/images/favicon.png">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="~/adminweb/css/style.css" rel="stylesheet">
    <style>
        .password-requirements {
            font-size: 14px;
            color: #333;
            line-height: 1.5;
            margin: 10px 0;
            list-style-type: none;
            padding: 0;
        }

            .password-requirements li {
                display: inline-block;
                margin-right: 15px;
            }

                .password-requirements li.valid {
                    text-decoration: line-through;
                    color: green;
                }

                .password-requirements li.invalid {
                    color: red;
                }
    </style>
</head>

<body class="h-100">
    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body pt-5">
                                <a class="text-center" href="index.html">
                                    <h4>Şifre Belirleme</h4>
                                </a>

                                <!-- Şifre belirleme formu -->
                                <form class="mt-5 mb-5 login-input" method="post">
                                    <div class="form-group">
                                        <label for="password">Şifre</label>
                                        <input type="password" class="form-control" asp-for="Password" id="password">
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                        <!-- Şifre kuralları açıklaması -->
                                        <ul class="password-requirements">
                                            <li id="minLength" class="invalid">En az 6 karakter</li>
                                            <li id="upperCase" class="invalid">1 büyük harf</li>
                                            <li id="lowerCase" class="invalid">1 küçük harf</li>
                                            <li id="number" class="invalid">1 rakam</li>
                                            <li id="specialChar" class="invalid">1 özel karakter</li>
                                        </ul>
                                    </div>

                                    <div class="form-group">
                                        <label for="confirmPassword">Şifreyi Onayla</label>
                                        <input type="password" class="form-control" asp-for="ConfirmPassword" id="confirmPassword">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <button class="btn login-form__btn submit w-100">Şifreyi Kaydet</button>
                                </form>

                                @if (ViewBag.ErrorMessages != null && ViewBag.ErrorMessages.Count > 0)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        <ul>
                                            @foreach (var error in ViewBag.ErrorMessages)
                                            {
                                                <li>@error</li>
                                            }
                                        </ul>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/adminweb/plugins/common/common.min.js"></script>
    <script src="~/adminweb/js/custom.min.js"></script>
    <script src="~/adminweb/js/settings.js"></script>
    <script src="~/adminweb/js/gleek.js"></script>
    <script src="~/adminweb/js/styleSwitcher.js"></script>

    <script>
        document.getElementById('password').addEventListener('keyup', function () {
            var password = this.value;

            // En az 6 karakter uzunluğunda olmalı
            if (password.length >= 6) {
                document.getElementById('minLength').classList.remove('invalid');
                document.getElementById('minLength').classList.add('valid');
            } else {
                document.getElementById('minLength').classList.remove('valid');
                document.getElementById('minLength').classList.add('invalid');
            }

            // En az bir büyük harf içermeli
            if (/[A-Z]/.test(password)) {
                document.getElementById('upperCase').classList.remove('invalid');
                document.getElementById('upperCase').classList.add('valid');
            } else {
                document.getElementById('upperCase').classList.remove('valid');
                document.getElementById('upperCase').classList.add('invalid');
            }

            // En az bir küçük harf içermeli
            if (/[a-z]/.test(password)) {
                document.getElementById('lowerCase').classList.remove('invalid');
                document.getElementById('lowerCase').classList.add('valid');
            } else {
                document.getElementById('lowerCase').classList.remove('valid');
                document.getElementById('lowerCase').classList.add('invalid');
            }

            // En az bir rakam içermeli
            if (/\d/.test(password)) {
                document.getElementById('number').classList.remove('invalid');
                document.getElementById('number').classList.add('valid');
            } else {
                document.getElementById('number').classList.remove('valid');
                document.getElementById('number').classList.add('invalid');
            }

            // En az bir özel karakter içermeli
            if (/[^a-zA-Z0-9]/.test(password)) {
                document.getElementById('specialChar').classList.remove('invalid');
                document.getElementById('specialChar').classList.add('valid');
            } else {
                document.getElementById('specialChar').classList.remove('valid');
                document.getElementById('specialChar').classList.add('invalid');
            }
        });
    </script>

</body>
</html>
