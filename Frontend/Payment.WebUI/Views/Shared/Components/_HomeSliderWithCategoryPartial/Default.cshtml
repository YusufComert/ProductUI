@model ProductWithCategory.ProductCategoryViewModel

<style>
    img.custom-image {
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
        width: 300px; /* Sabit genişlik */
        height: 475px; /* Sabit yükseklik */
        object-fit: cover; /* Resmin boyuta göre oranlarını koruyarak kesilmesini sağlar */
    }
    .scrollable-category {
    max-height: 400px; /* Yaklaşık 5 kategori yüksekliğine denk gelir */
    overflow-y: auto; /* Yatay kaydırma çubuğunu etkinleştirir */
}

.scrollable-category ul {
    padding: 0;
    margin: 0;
    list-style: none;
}

.scrollable-category li {
    padding: 10px 0; /* Her bir kategori için boşluk */
}


    
</style>
   <!-- Begin Slider With Category Menu Area -->
<div class="slider-with-banner">
    <div class="container">
        <div class="row">
            <!-- Begin Category Menu Area -->
            <div class="col-lg-3">
                <!--Category Menu Start-->
                <div class="category-menu">
                    <div class="category-heading">
                        <h2 class="categories-toggle"><span>Kategoriler</span></h2>
                    </div>
                    <div id="cate-toggle" class="category-menu-list scrollable-category">
                        <ul>
                            @foreach (var item in Model.Categories)
                            {
                                <li><a href="#">@item.CategoryName</a></li>
                            }
                        </ul>
                    </div>
                </div>
                <!--Category Menu End-->
            </div>

            <!-- Category Menu Area End Here -->
            <!-- Begin Slider Area -->
            <div class="col-lg-9">
                <div class="slider-area pt-sm-30 pt-xs-30">
                    <div class="slider-active owl-carousel">
                        <!-- Begin Single Slide Area -->
                        <div class="single-slide align-center-left animation-style-02 bg-4">
                            <div class="slider-progress"></div>
                            <div class="slider-content">
                                <h5>İndirim Teklifi <span>%20 İndirim</span> Bu Hafta</h5>
                                <h2>Chamcham Galaxy S9 | S9+</h2>
                                <h3>Başlangıç Fiyatı <span>₺589.00</span></h3>
                                <div class="default-btn slide-btn">
                                    <a class="links" href="shop-left-sidebar.html">Alışveriş Yap</a>
                                </div>
                            </div>
                        </div>
                        <!-- Single Slide Area End Here -->
                        <!-- Begin Single Slide Area -->
                        <div class="single-slide align-center-left animation-style-01 bg-5">
                            <div class="slider-progress"></div>
                            <div class="slider-content">
                                <h5>İndirim Teklifi <span>Kara Cuma</span> Bu Hafta</h5>
                                <h2>Work Desk Surface Studio 2018</h2>
                                <h3>Başlangıç Fiyatı <span>₺1599.00</span></h3>
                                <div class="default-btn slide-btn">
                                    <a class="links" href="shop-left-sidebar.html">Alışveriş Yap</a>
                                </div>
                            </div>
                        </div>
                        <!-- Single Slide Area End Here -->
                        <!-- Begin Single Slide Area -->
                        <div class="single-slide align-center-left animation-style-02 bg-6">
                            <div class="slider-progress"></div>
                            <div class="slider-content">
                                <h5>İndirim Teklifi <span>%10 İndirim</span> Bu Hafta</h5>
                                <h2>Phantom 4 Pro+ Obsidian</h2>
                                <h3>Başlangıç Fiyatı <span>₺809.00</span></h3>
                                <div class="default-btn slide-btn">
                                    <a class="links" href="shop-left-sidebar.html">Alışveriş Yap</a>
                                </div>
                            </div>
                        </div>
                        <!-- Single Slide Area End Here -->
                    </div>
                </div>
            </div>
            <!-- End Slider Area -->
                    </div>
                </div>
            </div>
            <!-- Slider Area End Here -->
        </div>
    </div>
</div>
<!-- Slider With Category Menu Area End Here -->