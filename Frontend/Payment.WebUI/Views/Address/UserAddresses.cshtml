@model List<ResultAddressDto>

@{
    ViewData["Title"] = "UserAddresses";
    Layout = "~/Views/Layout/_Layout.cshtml";
    int count = 0;
    var userAddressesID = ViewBag.AddressesId;
    var errorMessage = ViewBag.ErrorMessage;
}

<style>
    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 60vh;
        flex-direction: column;
        padding: 20px;
    }

    .table {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        background-color: #fff;
        border-radius: 8px;
        border-collapse: collapse; /* Kenarlıkların birleşik görünmesi için */
        overflow: hidden;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1); /* Gölgelendirme */
    }

        .table th, .table td {
            padding: 12px 15px; /* Hücrelere iç boşluk ekleyerek ferah görünüm sağlama */
            text-align: left;
            border: 1px solid #ddd; /* Kenarlıkları belirginleştirme */
        }

        .table th {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2; /* Satırlarda arka plan rengi değişimi */
        }

        .table tr:hover {
            background-color: #e9ecef; /* Hover etkisi */
        }

    .button-container {
        margin-top: 20px;
        text-align: center;
        width: 100%;
    }

    .btn {
        padding: 8px 16px; /* Butonlara iç boşluk ekleme */
        border-radius: 5px;
    }

    .btn-outline-info, .btn-outline-success, .btn-outline-danger {
        border-width: 2px; /* Buton kenarlıklarını daha belirgin yapma */
    }

    .alert {
        margin-top: 15px;
        padding: 10px;
        border-radius: 5px;
    }
</style>

<div class="form-container">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Adres</th>
                <th>Şehir </th>
                <th>İlçe </th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.AddressLine</td>
                    <td>@item.City</td>
                    <td>@item.District</td>
                    <td><a href="/Address/DeleteAddress/@item.AddressID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
                    <td><a href="/Address/UpdateAddress/@item.AddressID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div class="button-container">
        <a href="/Address/CreateAddress/" class="btn mb-1 btn-rounded btn-outline-info">Yeni Address Girişi</a>
        @if (errorMessage != null)
        {
            <div class="alert alert-danger" role="alert">
                @errorMessage
            </div>
        }
    </div>
</div>
